<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CuartaPelicula">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/la_sirenita" />

    <Button
        android:id="@+id/btn_atras"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="-6dp"
        android:drawableTop="@drawable/atras" />

    <Button
        android:id="@+id/btn_sig"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/btn_atras"
        android:drawableTop="@drawable/siguiente" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/btn_atras"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:background="@color/iconos"
        android:fontFamily="@font/hodlers"
        android:gravity="center"
        android:text="LA SIRENITA"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:text="SELECCIONE HORARIO"
        android:fontFamily="@font/couragekid"
        android:textSize="34sp" />

    <RadioGroup
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:paddingStart="5dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="10:00 PM"
            android:fontFamily="@font/couragekid"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:text="9:30 PM"
            android:fontFamily="@font/couragekid"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="120dp"
            android:fontFamily="@font/couragekid"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10:30 PM"
            android:textSize="25dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="186dp"
        android:fontFamily="@font/couragekid"
        android:text="NÂ° Ticket:"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="306dp"
        android:layout_marginTop="-49dp"
        android:drawableTop="@drawable/agregar" />

    <Button
        android:id="@+id/button7"
        android:layout_width="61dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="-46dp"
        android:drawableTop="@drawable/menos" />

    <EditText
        android:id="@+id/txtNombreUser"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="19dp"
        android:layout_marginTop="164dp"
        android:layout_toEndOf="@+id/button7"
        android:ems="10"
        android:fontFamily="@font/couragekid"
        android:inputType="text"
        android:textSize="25dp" />

    <RadioGroup
        android:layout_width="268dp"
        android:layout_height="59dp"
        android:layout_below="@+id/txtNombreUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:layout_marginEnd="72dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/couragekid"
            android:text="2 D"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/couragekid"
            android:text="3 D"
            android:textSize="25dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="173dp"
        android:layout_height="71dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="126dp"
        android:fontFamily="@font/couragekid"
        android:text="CONTINUAR"
        android:textSize="24sp" />

</RelativeLayout>