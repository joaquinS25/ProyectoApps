<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Crear_cuenta">


    <EditText
        android:id="@+id/txtApellidoUser"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/person_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese Apellidos"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUser" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bulonefreeversionregular"
        android:text="REGISTRAR USUARIO"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/txtNombreUser"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/person_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese Nombres"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="183dp"
        android:layout_height="113dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registro" />

    <EditText
        android:id="@+id/txtEdadUser"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/edad_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese su edad"
        android:inputType="numberSigned"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoUser" />

    <EditText
        android:id="@+id/txtDNIUser"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/dni_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese DNI"
        android:inputType="numberSigned"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEdadUser" />

    <EditText
        android:id="@+id/txtCelularUser"
        android:layout_width="289dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/celular_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese celular"
        android:inputType="numberSigned"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDNIUser" />

    <EditText
        android:id="@+id/txtEmailUser"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_personalizado"
        android:drawableStart="@drawable/correo_personalizado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese correo"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCelularUser" />

    <Button
        android:id="@+id/btnRegistrarUsuario"
        android:layout_width="151dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="Registrar"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailUser" />

</androidx.constraintlayout.widget.ConstraintLayout>