<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaPelicula">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/transformers" />

    <Button
        android:id="@+id/btn_atras"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="-6dp"
        android:drawableTop="@drawable/atras" />

    <Button
        android:id="@+id/btn_sig"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/btn_atras"
        android:drawableTop="@drawable/siguiente" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="387dp"
        android:layout_height="69dp"
        android:layout_below="@+id/btn_atras"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="6dp"
        android:background="@color/iconos"
        android:fontFamily="@font/hodlers"
        android:gravity="center"
        android:text="TRANSFORMERS"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/couragekid"
        android:text="SELECCIONE HORARIO"
        android:textSize="34sp" />

    <RadioGroup
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="38dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/couragekid"
            android:text="10:00 PM"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/couragekid"
            android:text="9:30 PM"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/couragekid"
            android:text="10:30 PM"
            android:textSize="25dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="239dp"
        android:fontFamily="@font/couragekid"
        android:text="NÂ° Ticket:"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="266dp"
        android:layout_marginTop="-56dp"
        android:drawableTop="@drawable/agregar" />

    <Button
        android:id="@+id/button7"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="-54dp"
        android:drawableTop="@drawable/menos" />

    <EditText
        android:id="@+id/txtNombreUser"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:fontFamily="@font/couragekid"
        android:layout_marginStart="5dp"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/button7"
        android:ems="10"
        android:inputType="text" />

    <RadioGroup
        android:layout_width="268dp"
        android:layout_height="59dp"
        android:layout_below="@+id/txtNombreUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/couragekid"
            android:text="2 D"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/couragekid"
            android:text="3 D"
            android:textSize="25dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="173dp"
        android:layout_height="71dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="126dp"
        android:fontFamily="@font/couragekid"
        android:text="CONTINUAR"
        android:textSize="24sp" />

</RelativeLayout>